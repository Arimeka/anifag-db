<header class='navbar navbar-fixed-top'>
  <div class='navbar-inner'>
    <div class='container'>
      <%= link_to 'AnifagDB', root_path, class: 'brand' %>
      <ul class="nav" id="head-menu">
        <li><%= link_to t('home'), root_path %></li>
        <li><%= link_to t('articles'), articles_path %></li>        
      </ul>
      <div class='nav-collapse collapse pull-right'>
        <ul class="nav">
          <% if user_signed_in? %>
            <li><%= link_to current_user.name, users_user_path(current_user) %></li>
            <li><%= link_to t('logout'), destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to t('enter'), new_user_session_path %></li>
          <%end %>
        </ul>      
        <%= form_tag search_path, method: :get, class: 'navbar-search' do %>
          <%= search_field_tag :query, params[:query], class: 'search-query', placeholder: t('form.search.search_text') %>
        <% end %>
      </div>
    </div>
  </div>
</header>
<div class='container', id='header'>
  <%= image_tag 'rails.png', class: "header-image" %>
</div>