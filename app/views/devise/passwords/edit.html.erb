<h2><%=t 'devise.password.edit.title' %></h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group"><%= f.label :password, t 'devise.registration.edit.new_password' %>
  <%= f.password_field :password, :autofocus => true %></div>

  <div class="form-group"><%= f.label :password_confirmation, t 'devise.password.edit.new_password_confirm' %>
  <%= f.password_field :password_confirmation %></div>

  <%= f.submit t('devise.password.edit.submit'), name: nil, class: 'btn btn-default' %>
<% end %>

<%= render "devise/shared/links" %>
