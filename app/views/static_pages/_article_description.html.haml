%article{class: 'article-description media'}
  .article-header 
    %ul{ class: "inline pull-right" }
      -article.categories.each do |category|
        %li{ class: "label label-info" }= link_to category.title, category, class: "article-category"     
    %div{ class: "article-added"}= article.created_at.to_time.strftime("%Y-%m-%d %H:%M")
  - img = get_image(article.description)
  = link_to( image_tag(img, class: 'media-object'), article, class: 'pull-left' ) if img
  .media-body
    %h3.media-heading= link_to article.title, article
    .article-body= Sanitize.clean(article.description).html_safe
    .article-footer
      = link_to 'Читать дальше', article
      .article-tags
        %strong Теги:
        %ul.inline
          %li{ class: "badge badge-info" }= link_to 'Bwah', '#', class: "article-tag"
          %li{ class: "badge badge-info" }= link_to 'Sugoi', '#', class: "article-tag"
